{
  "name": "LockBox Chrome Extension",
  "description": "Chrome Extension for password management app LockBox",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "LockBox Extension",
    "default_icon": "icon.png"
  },
  "permissions": ["storage", "tabs", "activeTab", "webNavigation", "scripting"],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
      "https://*/*"
  ]
}
